{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,                 // Ignoriere Typüberprüfungen in Abhängigkeiten
    "types": ["jest"]                     // Nur jest-Typen verwenden
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"] // Schließe Tests oder zusätzliche Typen aus, falls nötig
}
